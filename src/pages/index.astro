---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="w-dvw min-h-[calc(100vh-64px)] p-6 flex flex-col gap-6 items-center justify-center text-center">
    
    <h2 class="text-2xl font-bold">
      Benvenuto in TCL Work Organizer
    </h2>

    <p class="text-gray-600 max-w-md">
      Gestisci lavori, stati e avanzamenti in modo semplice e centralizzato.
    </p>

    <div class="flex gap-4">
      <a
        href="/dashboard"
        class="bg-green-600 text-white px-6 py-3 rounded font-semibold"
      >
        Vai alla Dashboard
      </a>
    </div>

  </section>
</Layout>
