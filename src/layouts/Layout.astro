---
import '../styles/global.css'
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
  SignUpButton
} from "@clerk/astro/components";
---


<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>TCL Work Organizer</title>
  </head>

  <body class="min-h-screen flex flex-col">
    
    <!-- HEADER -->
   <header class="w-full p-4 flex justify-between items-center border-b">
  <h1 class="text-lg font-semibold">
    TCL Work Organizer
  </h1>

  <div class="flex gap-3 items-center">
    <SignedOut>
      <SignInButton
        mode="modal"
        class="bg-blue-500 text-white px-4 py-2 rounded"
      >
        Accedi
      </SignInButton>

      <SignUpButton
        mode="modal"
        class="border border-blue-500 text-blue-500 px-4 py-2 rounded"
      >
        Registrati
      </SignUpButton>
    </SignedOut>

    <SignedIn>
      <UserButton showName />
    </SignedIn>
  </div>
</header>


    <!-- PAGE CONTENT -->
    <main class="flex-1">
      <slot />
    </main>

  </body>
</html>
